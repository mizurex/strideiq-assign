generator client {
  provider = "prisma-client"
  output = "../src/generated"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  }


model Rule {
  id          String   @id @default(uuid())
  orgId       String
  name        String
  conditions  Json       
  actions     String[]  
  priority    Int
  active      Boolean   @default(true)
}
model Evaluation {
  id           String    @id @default(uuid())    
  orgId        String
  expense      String
  matchedRules String[]
  actions      String[]
  trace        Json
  createdAt    DateTime  @default(now())
}